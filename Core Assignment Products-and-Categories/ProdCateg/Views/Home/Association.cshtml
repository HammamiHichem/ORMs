@model Association

<h2> Add Product to Category</h2>

<form asp-action="AddAssociation" asp-controller="Home">
    <div class="form-group">
        <label asp-for="ProductId"> Products:</label>
        <select asp-for="ProductId" class="form-select">
            @foreach (Product p in ViewBag.AllProducts)
            {
                <option value="@p.ProductId">@p.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"> Categories:</label>
        <select asp-for="CategoryId" class="form-select">
            @foreach (Category c in ViewBag.AllCategories)
            {
                <option value="@c.CategoryId">@c.Name</option>
            }
        </select>
    </div>
    <input type="submit" value=" Add Product to Category" class="btn btn-info">
</form>
