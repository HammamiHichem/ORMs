@model ChefsNDishes.Models.Dish

@{
    ViewData["Title"] = "Add a Dish";
}

<h1>Add a Dish</h1>

<form asp-controller="Dish" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Calories"></label>
        <input asp-for="Calories" class="form-control" />
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tastiness"></label>
        <input asp-for="Tastiness" class="form-control" />
        <span asp-validation-for="Tastiness" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Dish</button>
</form>
