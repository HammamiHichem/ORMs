@model List<ProductsAndCategories.Models.Product>

<h1>All Products</h1>

@foreach (var product in Model)
{
    <div>
        <h3>@product.Name</h3>
        <p>Description: @product.Description</p>
        <p>Price: @product.Price</p>
        <p>Categories:
            @foreach (var association in product.Associations)
            {
                <span>@association.Category.Name</span>
            }
        </p>
    </div>
}
