@model ProductsAndCategories.Models.MyViewModel

<div class="row">
    <div class="col-6">
        <h2>Add Category Form</h2>
        <form asp-action="AddCategory" asp-controller="Home" method="post">
            <div class="form-group">
                <label asp-for="Name">Title</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Category" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>
